{% extends "basefront.html.twig" %}
{% block body %}
    <div class="row mt-3">
        <div class="col">
            <!-- emplacement de la vidÃ©o -->
            {% if formation.videoid %}
                <iframe width="560" height="315" 
                        src="https://www.youtube.com/embed/{{ formation.videoid }}" 
                        title="YouTube video player" frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                </iframe>                          
            {% endif %}
        </div>
        <div class="col">
            <h5> {{ formation.publishedatstring }}</h5>
            <h3 class="text-info mt-5">{{ formation.title }}</h3>
            <p>&nbsp;</p>
            <p><strong>Description :</strong></p>
            <p>
                {{ formation.description|nl2br }}
            </p>
            <p class="mt-3"><strong>Niveau :</strong></p>
		{% if formation.niveau.niveau == "Difficile" %}
                    <div class="text-danger">
                        {{ formation.niveau.niveau }}
                    </div>
		{% elseif formation.niveau.niveau == "Moyen" %}
		    <div class="text-warning">
			{{ formation.niveau.niveau }}
		    </div>
		{% else %}   
                    <div class="text-success">
			{{ formation.niveau.niveau }}
		    </div>
                {% endif %}         
        </div>
    </div>
{% endblock %}